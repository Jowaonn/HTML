<script type="text/javascript">
b = 100; yy = 11; NN = 3/100;
compute(b,yy,NN);
b = 500; yy = 17; NN = 5/100;
compute(b,yy,NN);
function compute(balance,y,InterestRate)
{
year = 1;
while(year<=y) //y=ปีที่ฝาก 
{
interest=balance*(InterestRate);
balance=balance+interest;
document.write("year balance" +year +"balance: " + balance);
document.write("<BR>");
year++;
}
document.write("______________________________________");
document.write("<BR>");
}
</script>
